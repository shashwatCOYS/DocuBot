# Cerebras AI API Configuration
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_API_BASE_URL=https://api.cerebras.ai/v1

# Model Configuration
MODEL_NAME=llama-3.1-8b
MAX_TOKENS=2048
TEMPERATURE=0.5
TOP_P=0.9

# Database Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# MCP Gateway / Exa configuration
MCP_GATEWAY_BASE_URL=http://localhost:7777
MCP_GATEWAY_API_KEY=your_mcp_gateway_api_key_here
EXA_API_KEY=your_exa_api_key_here
EXA_SEARCH_TOOL_NAME=exa.search
EXA_CRAWL_TOOL_NAME=exa.crawl
USE_MCP_FOR_CRAWLING=true

# Context7 configuration
CONTEXT7_API_KEY=your_context7_api_key_here

# Vector Database configuration
WEAVIATE_URL=http://localhost:8080
USE_CLOUD_VECTORDB=true

# Redis configuration
REDIS_URL=redis://localhost:6379

# Web crawling configuration
MAX_CRAWL_DEPTH=3
MAX_CONCURRENT_REQUESTS=5
CRAWL_DELAY=1.0


