# Cerebras AI API Configuration
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_API_BASE_URL=https://api.cerebras.ai/v1

# Model Configuration
MODEL_NAME=llama-3.1-8b
MAX_TOKENS=2048
TEMPERATURE=0.5
TOP_P=0.9

# Database Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# MCP Gateway / Exa Configuration
# Set USE_MCP_FOR_CRAWLING=true to enable crawling via Docker MCP gateway Exa tools
USE_MCP_FOR_CRAWLING=false
MCP_GATEWAY_BASE_URL=
MCP_GATEWAY_API_KEY=
EXA_SEARCH_TOOL_NAME=exa.search
EXA_CRAWL_TOOL_NAME=exa.crawl
